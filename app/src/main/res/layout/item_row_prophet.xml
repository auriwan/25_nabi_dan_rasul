<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/linear_nabi"
    android:background="@drawable/custom_bg"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="55dp"
        android:background="@drawable/custom_bg"
        android:backgroundTint="#18305E"
        android:layout_height="68dp"
        android:layout_marginEnd="16dp"
        tools:src="@tools:sample/avatars"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">
                <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_weight="100"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/baloot_hambi_bold"
                tools:text="@string/nama_nabi"/>
                    <Button
                        android:id="@+id/button_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="10"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_baseline_share_24"/>
                    <Button
                        android:id="@+id/button_favorit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="10"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_favorite_shadow_24dp"/>
                <TextView
                    android:id="@+id/likeCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="0"
                    android:textColor="#fff"
                    android:layout_marginStart="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"/>

            </LinearLayout>
            <TextView
                android:id="@+id/item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/baloo_thambi_regular"
                tools:text="@string/detail"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>